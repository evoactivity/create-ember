{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": ["index.ts", "lib/**/*"],
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true
  }
}
